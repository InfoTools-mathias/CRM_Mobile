<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoTools.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Bienvenue sur Infotools !" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry x:Name="login_mail" Placeholder="me@mail.com" Margin="20,5" />
            <Entry x:Name="login_password" Placeholder="password" IsPassword="True" Margin="20,5" />
            <Button x:Name="login_submit" Text="Se Connecter" BackgroundColor="#097fe6" Clicked="Submit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>